<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td> <a href="/stories/show/{{id}}"></a>{{title}}</td>
            <td>{{{formatDate date 'MMM do YYYY'}}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a> 
                <form style="display :inline" action="/stories/{{id}}?_method=DELETE" id="delete-form" method="post">
                <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fa fa-remove"></i> Delete
                    </button>
                </form>
            </td>

        </tr>
         {{/each}}
    </tbody>
</table>
{{else}}
You have not created any story yet
{{/if}}